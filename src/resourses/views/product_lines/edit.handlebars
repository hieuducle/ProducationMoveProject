<div class="mt-4">
    <h3>Cập nhật sản phẩm</h3>

            <form method="POST" action = "/product_lines/{{product_lines._id}}?_method=PUT">
            <div class="form-group">
            <label for="name">Tên sản phẩm</label>
            <input type="text" class="form-control" value="{{product_lines.name}}" id="name" name="name">
        </div>

        <div class="form-group">
            <label for="description">Mô tả</label>
            <input type="text" class="form-control" value="{{product_lines.description}}" id="description" name="description">
        </div>

        <button type="submit" class="btn btn-primary">Lưu lại</button>
        </form>
</div>